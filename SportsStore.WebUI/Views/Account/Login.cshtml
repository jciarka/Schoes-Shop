@model ShoesStore.WebUI.Models.LoginViewModel

@{
    ViewBag.Title = "Panel logowania";
    //Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row justify-content-center m-0 p-0 m-md-5">
    <!-- Filtry -->
    <div class="col-xl-6 col-lg-7 p-2 m-0">
        <div class="card rounded-0 shadow-sm pl-3 pr-3 bg-light bg-light">
            <div class="card-body text-left">
                <p class="card-text mt-2">
                    <h2 class="mt-0 mb-4">Zaloguj się</h2>
                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary()
                        <div class="form-group">
                            <label>Nazwa użytkownika:</label>
                            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Hasło:</label>
                            @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                        <a class="bg-primary" href="#"><small class="form-text">Nie pamiętasz loginu lub hasła?</small></a>
                        </div>

                        <div class="container p-0 text-center">
                            <div class="form-group mb-3">
                                <label></label>
                                <input type="submit" value="Zaloguj się" class="btn btn-primary rounded-0 w-50" />
                            </div>

                            <div class="form-group">
                                <label>Nie masz jeszce konta? Zarejestruj się!</label>
                                <a href="#" class="btn btn-dark rounded-0 w-50">Załóż nowe konto</a>
                            </div>
                        </div>
                        

                        
                    }


                </p>
            </div>
        </div>
    </div>
</div>
