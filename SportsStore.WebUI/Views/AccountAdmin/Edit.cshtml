@using ShoesStore.IdentityDomain.Entities
@model AppUser

@{
    ViewBag.Title = "Utwórz urzytkownika";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container col-6">
    <div class="cardrounded-0 shadow-sm m-4 bg-light ">
        @using (Html.BeginForm())
        {
        <div class="card-header">
            <div class="panel-heading">
                Edytuj użytkownika @Model.UserName
            </div>
        </div>
            <div class="card-body">
                <div class="form-group">
                    <label>ID użytkownika</label>
                    <p class="form-control-static">@Model.Id</p>
                </div>

                @Html.ValidationSummary()
                @Html.HiddenFor(m => m.Id)
                <div class="form-group">
                    <label>e-mail</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
                <div class="form-group">
                    <label>Hasło</label>
                    @Html.Password("password", null, new { @class = "form-control" })
                    @Html.ValidationMessage("Password")
                </div>
            </div>
            <div class="card-footer">
                <input type="submit" value="zapisz" class="btn btn-primary" />
                @Html.ActionLink("Anuluj", "Index", null, new { @class = "btn btn-default" })
            </div>
        }
        </div>
</div>