<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/ErrorStyles.css" rel="stylesheet" />
    <link href="~/Content/ErrorStyles.css" rel="stylesheet" />
    <link rel="stylesheet" href=https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css>
    <link rel="stylesheet" href="~/Content/MyStyles/productsListSch.css" />

    <script type="text/javascript" src="~/Scripts/jquery-3.4.1.js"></script>
    <script type="text/javascript" src="~/Scripts/popper.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/MyScripts/productFocus.js"></script>

    <!-- styl który realizuje funkcjonalonść hover dla menu dropdown-->
    <style>
        .dropdown:hover > .dropdown-menu {
            display: block;
        }

        td.menu-table-kolumn {
            vertical-align: top;
            width: 300px;
        }

        .carousel img {
            margin-left: auto;
            margin-right: auto;
        }
    </style>

    <title>@ViewBag.Title</title>
</head>

<body>

    <!-- Menu z logiem firmu i do logowania -->
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: white">
        <a class="navbar-brand" href="@Url.Action("List","ShopProducts")">
            <img src="~/Logo/PantofelekPLmin.png" width="230" height="60" class="d-inline-block align-top" alt="" />
        </a>

        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
            <form class="form-inline my-2 my-lg-0 mr-5">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Znajdź">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Znajdź</button>
            </form>

            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link text-center" href="@Url.Action("Index", "Cart",new {returnUrl = Request.Url.PathAndQuery})">
                        <i class="fa fa-shopping-cart" style="font-size: 30px"></i><br />Koszyk
                    </a>
                </li>
                @Html.Action("AccountIcon", "ShopNav")
            </ul>
        </div>
    </nav>



    <!-- Menu nawigacji -->
    @Html.Action("MenuBar", "ShopNav")


    <!-- pasek promocji -->

    <div class="m-2">
        <div id="carouselExampleControls" style="margin-top:10px" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/Pictures/Sale1.jpg" width="700" height="340" class="d-block" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/Pictures/Sale2.jpg" width="700" height="340" class="d-block" alt="...">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Poprzedni</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Następny</span>
            </a>
        </div>
    </div>


    @RenderBody()

    <!-- stopka -->
    <footer class="border-top bg-light">
        <div class="container w-75 ml-auto mr-auto bg-light my-4">
            <div class="row">
                <div class="col-sm">
                    <h5>Informacje dla klientów</h5>
                    <ul class="list-unstyled ml-3">
                        <li><a class="text-muted" href="#">Regulamin sklepu</a>
                        <li />
                        <li><a class="text-muted" href="#">Rodzaje wysyłki</a></li>
                        <li><a class="text-muted" href="#">Rodzaje płatności</a></li>
                        <li><a class="text-muted" href="#">Zwrot towaru</a></li>
                        <li><a class="text-muted" href="#">Zgłaszanie reklamacji</a></li>
                    </ul>
                </div>

                <div class="col-sm">
                    <h5>Informacje o sklepie</h5>
                    <ul class="list-unstyled ml-3">
                        <li><a class="text-muted" href="#">O nas</a>
                        <li />
                        <li><a class="text-muted" href="#">Sklepy stacjonarne</a></li>
                        <li><a class="text-muted" href="#">Histora firmy</a></li>
                        <li><a class="text-muted" href="#">Wizja</a></li>
                    </ul>
                </div>

                <div class="col-sm">
                    <h5>Kontakt</h5>
                    <table class="ml-3">
                        <tbody class="font-weight-light">
                            <tr><td>Adres email:</td><td> </td></tr>
                            <tr><td> </td><td>kontakt@pantofelek.pl</td></tr>
                            <tr><td>Infolinia:</td><td></td></tr>
                            <tr><td> </td><td>22-231-23-21</td></tr>
                            <tr><td> </td><td>22-231-23-22</td></tr>
                            <tr><td>Adres biura:</td><td></td></tr>
                            <tr><td> </td><td>al.Jerozolimskie xx/xx</td></tr>
                            <tr><td> </td><td>02-xxx Warszawa</td></tr>
                        </tbody>

                    </table>
                </div>
            </div>
        </div>

    </footer>


</body>
</html>
