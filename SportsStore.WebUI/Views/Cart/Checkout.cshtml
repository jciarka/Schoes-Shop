@model SportsStore.Domain.Entities.ShippingDetails

@{
    ViewBag.Title = null;
}


    <div class="row justify-content-center m-0 p-0 m-md-5">
        <!-- Filtry -->
        <div class="col-xl-6 col-lg-7 p-2 m-0">
            <div class="card rounded-0 shadow-sm p-3 bg-light bg-light">
                <div class="card-body text-left">
                    <p class="card-text mt-2">
                        <h2>Wysyłka</h2>
                    <p>Proszę podać swoje dane, a towar zostanie natychmiast wysłany!</p>

                    @using (Html.BeginForm())
                    {

                        @Html.ValidationSummary()

                        <h3>Wysyłka dla</h3>

                        <div class="form-group">
                            <label>Nazwisko:</label>
                            @Html.TextBoxFor((x => x.Name), new { @class = "form-control" })
                        </div>

                        <h3>Adres</h3>

                        foreach (var property in ViewData.ModelMetadata.Properties)
                        {
                            if (property.PropertyName != "Name" && property.PropertyName != "GiftWrap")
                            {
                                <div class="form-group">
                                    <label>@(property.DisplayName ?? property.PropertyName)</label>
                                    @Html.TextBox(property.PropertyName, null, new { @class = "form-control" })
                                </div>
                            }
                        }

                        <h3>Opcje</h3>
                        <div class="checkbox">
                            <label>
                                @Html.EditorFor(x => x.GiftWrap)
                                Zapakowane jako prezent
                            </label>
                        </div>

                        <div class="text-center">
                            <input class="btn btn-primary" type="submit" value="Zakończ zamównienie" />
                        </div>
                    }

                    </p>
                </div>
            </div>
        </div>
    </div>




