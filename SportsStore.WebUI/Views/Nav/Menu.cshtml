@model SportsStore.WebUI.Models.CategoryInfo

<div>
    @Html.ActionLink("HOME", "List", "Product", null, 
        new {@class = "btn btn-block btn-default btn-lg" })

    @foreach (string link in Model.Categories)
    { 
        @Html.RouteLink(link,
                        new {controller = "Product", action = "List",
                            category = link, page = 1 },
                        new { @class = ("btn btn-block btn-default btn-lg " +
                                  (link == Model.SelectedCategory ? "selected btn-primary" : "")) }    
                            
                        ) 
    }

</div>